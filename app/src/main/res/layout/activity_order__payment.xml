<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_order__payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/choice_doctor_title">
        <Button android:id="@+id/back_to_choice_doctor"
            android:layout_width="17dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/news_arrow"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="预约挂号"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        >
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/anli_picture_circle"
            android:layout_marginLeft="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安丽"
                android:textSize="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="科室：风湿病科"
                android:textSize="13dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="职称：主任医师"
                android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用余额：¥"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="20dp"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:background="@mipmap/immediate_recharge"/>
    </LinearLayout>
    <Button android:layout_marginTop="34px"
        android:layout_marginLeft="190dp"
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:background="@mipmap/favourable_introduce"/>
    <TextView android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择支付方式："
        android:textSize="20dp"
        android:layout_marginLeft="20dp"/>
    <RadioGroup android:id="@+id/group4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/payment_wechat"
            android:drawableRight="@drawable/payment"

            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="微信支付"
            android:textSize="17.0sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:checked="true"
            android:button="@null"
            />
        <RadioButton
            android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/payment_aliapy"
            android:drawableRight="@drawable/payment"
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="支付宝支付"
            android:textSize="17.0sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:checked="false"
            android:button="@null"
            />
        <RadioButton
            android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/payment_unionpay"
            android:drawableRight="@drawable/payment"
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="网银支付"
            android:textSize="17.0sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:checked="false"
            android:button="@null"
            />
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="应付金额："
        android:textSize="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="挂号费20元"
        android:textSize="20dp"/>
    <Button android:id="@+id/immediate_payment"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/order_button"
        android:text="立即支付"/>
</LinearLayout>
