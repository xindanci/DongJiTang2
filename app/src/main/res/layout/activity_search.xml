<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f9f9"
    android:id="@+id/choice_register"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/choice_doctor_title">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="选择科室"
            android:textSize="25dp"
            android:gravity="center_horizontal"/>
        <Button android:id="@+id/nest_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:layout_gravity="end"
            android:background="#0000"/>
    </FrameLayout>
    <LinearLayout android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/search_register">
        <EditText
            style="?android:attr/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入症状、疾病、科室、医生名"
            />
        <Button
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@mipmap/ic_search"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按科室查找"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
    <RadioGroup android:id="@+id/group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
            <RadioButton
                android:id="@+id/button1"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="儿童科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />
            <RadioButton
                android:id="@+id/button2"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="女子科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />

            <RadioButton
                android:id="@+id/button3"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="内科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />
    </RadioGroup>
        <RadioGroup android:id="@+id/group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/button4"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="内分泌科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />
            <RadioButton
                android:id="@+id/button5"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="心血管科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />
            <RadioButton
                android:id="@+id/button6"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="皮肤科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />
        </RadioGroup>
        <RadioGroup android:id="@+id/group3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/button7"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="治未科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />
            <RadioButton
                android:id="@+id/button8"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="风湿科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />
            <RadioButton
                android:id="@+id/button9"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="针推科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />
    </RadioGroup>
        <RadioGroup android:id="@+id/group4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/button10"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="耳鼻喉科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />
            <RadioButton
                android:id="@+id/button11"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="肿瘤科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />
            <RadioButton
                android:id="@+id/button12"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="脾胃科"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/radio" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>

