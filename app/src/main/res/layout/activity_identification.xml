<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/review_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.huanghuai.djt.dongjitang.Utils.CustomFontTextView
        android:textColor="#000"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="100dp"
        android:text="根据近一年的体验和感觉，回答以下问题："
        android:textSize="36px"
        android:textStyle="bold"/>
    <com.huanghuai.djt.dongjitang.Utils.CustomFontTextView
        android:textColor="#000"
        android:id="@+id/question"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="一、您精力充沛吗？"
        android:textSize="46px"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="160dp"
        android:background="@mipmap/never"
        />
    <Button android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="160dp"
        android:background="@mipmap/seldom"
        />
    <Button android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="160dp"
        android:background="@mipmap/sometime"
        />
    <Button android:id="@+id/button4"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="160dp"
        android:background="@mipmap/often"
        />
    <Button android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="160dp"
        android:background="@mipmap/usually"
        />

</LinearLayout>