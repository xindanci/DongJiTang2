<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_evaluate_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/result_bg"
    >


    <android.support.v4.view.ViewPager
        android:id="@+id/result_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.huanghuai.djt.dongjitang.Utils.CustomFontTextView
        android:layout_marginLeft="90dp"
        android:text="【辨识结果】"
        android:textSize="55px"
        android:textColor="#000"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView android:id="@+id/property_bg"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="130dp"
        android:src="@mipmap/ph_bg"
        />
    <com.huanghuai.djt.dongjitang.Utils.CustomFontTextView
        android:id="@+id/all_property"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="90dp"
        android:textSize="39px"
        android:text="【总体特征】阴阳气血调和，以体态适中、面色红润、精力充沛等为主要特征。"
        />
    <com.huanghuai.djt.dongjitang.Utils.CustomFontTextView
        android:id="@+id/body_property"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="90dp"
        android:textSize="39px"
        android:text="【形体特征】体型匀称健壮。"/>
    <com.huanghuai.djt.dongjitang.Utils.CustomFontTextView
        android:id="@+id/habit_property"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="90dp"
        android:textSize="39px"
        android:text="【常见表现】面色、肤色泽润，头发稠密有光泽，目光有神，鼻色明润，嗅觉通利，唇色红润，不易疲劳，精力充沛，耐受寒热，睡眠良好。胃纳佳，二便正常，舌色淡红，苔薄白，脉和缓有力。"/>
    <com.huanghuai.djt.dongjitang.Utils.CustomFontTextView
        android:id="@+id/psychic_property"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="90dp"
        android:textSize="39px"
        android:text="【心理特征】性格随和开朗。"/>
    <com.huanghuai.djt.dongjitang.Utils.CustomFontTextView
        android:id="@+id/incidence_tendency"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="90dp"
        android:textSize="39px"
        android:text="【发病倾向】平素患病较少。"/>
    <com.huanghuai.djt.dongjitang.Utils.CustomFontTextView
        android:id="@+id/suit_ability"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="90dp"
        android:textSize="39px"
        android:text="【对外界环境适应能力】对自然环境和社会环境适应能力较强。"/>
    <Button android:id="@+id/end_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束测评"
        android:textSize="45px"
        android:background="#00000000"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
</RelativeLayout>
