<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/register_bg"
    android:id="@+id/choice_register"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/news_title_bg"
        android:text="选择科室"
        android:textSize="25dp"
        android:gravity="center_horizontal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:layout_marginRight="0dp"
        android:background="#0000"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/search_register">
    <EditText
        style="?android:attr/textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="输入症状、疾病、科室、医生名"
        />
        <Button
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@mipmap/ic_search"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按科室查找"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="15dp" />
    <GridLayout
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"

        >
        <Button android:text="妇科"
            android:id="@+id/button1"
            android:background="@mipmap/child_register" />
        <Button android:text="儿科"
            android:id="@+id/button2"
            android:background="@mipmap/child_register"/>
        <Button android:text="皮肤科"
            android:id="@+id/button3"
            android:background="@mipmap/child_register"/>
        <Button android:text="内科"
            android:id="@+id/button4"
            android:background="@mipmap/child_register"/>
        <Button android:text="男科"
            android:id="@+id/button5"
            android:background="@mipmap/child_register"/>
        <Button android:text="产科"
            android:id="@+id/button6"
            android:background="@mipmap/child_register"/>
        <Button android:text="骨科"
            android:id="@+id/button7"
            android:background="@mipmap/child_register"/>
        <Button android:text="眼科"
            android:id="@+id/button8"
            android:background="@mipmap/child_register"/>
        <Button android:text="营养科"
            android:id="@+id/button9"
            android:background="@mipmap/child_register"/>
    </GridLayout>
</LinearLayout>

